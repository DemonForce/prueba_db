<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prueba">

    <!-- Agregamos el permiso de Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Si estás utilizando HTTP en lugar de HTTPS, agrega este permiso -->
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->

    <!-- Si necesitas permitir tráfico en texto claro (no recomendado para producción) -->
    <!-- Solo si estás usando HTTP y Android 9 (API 28) o superior -->
    <!--
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        ... >
    -->
    
    <application
        android:label="prueba"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        
        <!-- Si necesitas configurar networkSecurityConfig -->
        <!--
        android:networkSecurityConfig="@xml/network_security_config"
        -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <!-- Especifica un tema para esta actividad al iniciar -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- No elimines los meta-datos a continuación.
             Esto es utilizado por Flutter para generar GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Requerido para consultar actividades que pueden procesar texto -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>

